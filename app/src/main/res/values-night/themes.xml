<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShopTask" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#20A598</item>
        <item name="colorPrimaryVariant">#A8BFCC</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->

        <item name="colorSecondaryVariant">#ff7539</item>
        <item name="colorOnSecondary">#c30000</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>
<style name="MyRecycler">
<item name="android:background">@color/recycler_back_dark</item>
</style>

    <style name="MyBackground" >
        <item name="android:background">@drawable/eddddd_2_dark</item>
    </style>

    <style name="CardItem" >
        <item name="android:background">@color/card_back_dark</item>
    </style>
    <style name="Fab" >
        <item name="android:background">@color/fab_back_dark</item>
    </style>


    <style name="Widget.TaskShop.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">
            @style/TextAppearance.TaskShop.TextInputLayout.HintText
        </item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColorHint">?attr/colorPrimary</item>
    </style>
    //
    <style name="TextAppearance.TaskShop.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="button" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name ="textAllCaps"> false</item>
        <item name ="fontFamily"> @font/roboto_mono</item>
        <item name ="cornerRadius"> 5dp</item>
    </style>

</resources>